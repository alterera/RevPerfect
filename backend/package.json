    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^6.19.0",
    "@types/express": "^5.0.5",
    "@types/multer": "^2.0.0",
    "axios": "^1.13.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "prisma": "^6.19.0",
